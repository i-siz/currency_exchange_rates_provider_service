<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="006-insert-initial-roles" author="system">
        <insert tableName="roles">
            <column name="name" value="ROLE_USER"/>
            <column name="description" value="Standard user role"/>
        </insert>
        
        <insert tableName="roles">
            <column name="name" value="ROLE_PREMIUM_USER"/>
            <column name="description" value="Premium user role with access to trends"/>
        </insert>
        
        <insert tableName="roles">
            <column name="name" value="ROLE_ADMIN"/>
            <column name="description" value="Administrator role with full access"/>
        </insert>
    </changeSet>

</databaseChangeLog>
