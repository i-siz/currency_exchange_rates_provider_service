<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="002-create-exchange-rates-table" author="system">
        <createTable tableName="exchange_rates">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="base_currency" type="VARCHAR(3)">
                <constraints nullable="false"/>
            </column>
            <column name="target_currency" type="VARCHAR(3)">
                <constraints nullable="false"/>
            </column>
            <column name="rate" type="DECIMAL(18,6)">
                <constraints nullable="false"/>
            </column>
            <column name="provider" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="timestamp" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <createIndex tableName="exchange_rates" indexName="idx_exchange_rates_currencies">
            <column name="base_currency"/>
            <column name="target_currency"/>
        </createIndex>
        
        <createIndex tableName="exchange_rates" indexName="idx_exchange_rates_timestamp">
            <column name="timestamp"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
